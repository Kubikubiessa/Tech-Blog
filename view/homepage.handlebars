<!-- Loop over each object in the projects array -->
<div class="body">
  <aside class="container-post">
    <nav>
      <ul>
        <li>
          <a href="#" class="logo">
           <span class="div"></span><span class="nav-item">
              Your Dashboard</span>
          </a>
        </li>
        <li>
          <a href="/" class="table">
            <i class="fas fa-house" ></i><span class="nav-item">Home</span>
          </a>
        </li>
        <li>
          <a href="" class="table">
            <i class="fas fa-user"></i><span
              class="nav-item"
            >{{username}}</span></a>
        </li>
        
         
        <li>
          <a href="#" class="logout1 " id="LogOut">
            <i class="fas fa-sign-out-alt"></i><span
              class="nav-item"
            >logout</span></a>
        </li>
      </ul>
    </nav>
  </aside>

  <div class="container-main">
    <div class="main">
      <div class="main-top">
        <h2>New Blog</h2>
        <i class="fas fa-check-to-slot"></i>
      </div>
      <div class="main-skills">
        <div class="card">
          <form>
            <i class="fas fa-kiwi-bird h3"></i>
            <h3 for="post-content">Add a new blog</h3>

            <button type="submit"><a
                href="/dashboard/create"
                style=" color:black;  text-decoration: none;"
              >
                Create Post</a></button>
          </form>
        </div>
      </div>
    </div>
 <div class="main-course">
  <h1>Recent Post</h1>

{{#if posts.length}}

{{#each posts as |post|}}

<div class="course-box" style="margin-bottom: 100px;">
  {{> post-info post}}
  <a>{{user.username}}</a>|<a href="">github</a>|<a
          href=""
        >{{format_date post.created_at}} </a>|<a href="/dashboard/post/{{post.id}}">{{post.comments.length}} comments</a>
  <div style="text-align: right; border: 0;">
    
 <button class="startButton1" >
          <a
            href="/dashboard/edit/{{post.id}}"
            style="text-decoration: none; color:white;"
          >Edit Post</a></button>
          </div>
</div>
{{/each}}

{{else}}

<h3>Yo do not currently have any posts</h3>
{{/if}}
</div>
  </div>
</div>
{{#each blogs as |blog| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/project/{{blog.id}}">{{blog.title}}</a>
    </h2>
    
    <p>Created by {{blog.user.username}} on {{format_date blog.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{blog.body}}
    </p>
  </div>
</div>
{{/each}}
