<div class="text-end" style="text-align: right; border: 0;">
   <a
      href="/dashboard"
      style="color: black; text-decoration: none; font-size: 24px;"
    >
      &larr; back to dashboard</a>
</div>
{{> blog-info blog}}

<!-- displaying form and comments-->
<!-- only display if logged in -->

<form style="text-align: right; border:0;" class="new-comment-form">
  
    <input placeholder="Write a Comment" style="border-radius: 5px;  width: 300px; height:25px;" name="comment-body"></input>

     <button class="startButton3" type="submit"> Add comment</button>
  
  
</form>
<div class"comments" style="text-align: right; border:0;">
{{#if comments.length}}

{{#each comments as |comment|}}

<div class="course-box col-md-5" style="margin-bottom: 100px;">
 
  <a>Created by {{user.username}}</a>
  <p>{{comment.body}}</p>
   
  
          </div>
</div>
{{/each}}

{{else}}

<h3>No comments yet.</h3>
{{/if}}
</div>

  
</div>

{{> comment-partial blog.comments}}

<script src="/js/comments.js" defer></script>
</div>