<article style="height: 100vh; ">

  <div class="text-end" style="text-align: right; border: 0;">
    <a
      href="/dashboard"
      style="color: rgb(43, 36, 36); text-decoration: none; font-size: 22px;"
    >
      &larr; back to dashboard</a>
  </div>
  <h2 class="title mt-5" style="margin-left: 20px;">Edit blog</h2><hr />
  <form
    class="editFormBlog"
    style="margin-left: 20px; display:flex flex-direction:column"
  >

    <div style="margin-top: 10px;text-align: center;">

      <label for="blog-title">Blog title:</label>

      <input
        style="height: 30px;  border-radius: 4px;"
        class="form-control"
        name="blog-title"
        type="text"
        placeholder="{{blogToEdit.title}}"
        value="{{blog.title}}"
      />
    </div>
    <div>
      <br />
      <div style="text-align:center; ">
        <label for="blog-content">Blog content</label>
      </div>
      <br />
      <div style="text-align: center;">
        <input
          class="form-control textarea"
          style="height:100px; text-align: center;"
          name="blog-content"
          type="text"
          placeholder="{{blogToEdit.body}}"
          value="{{blog.body}}"
        />
      </div>
    </div>
 
    <div style="text-align: center; margin-top: 10px;">
      <button type="submit" class="startButton">Save Blog</button>
      <button type="button" id="delete-blog-btn">Delete Blog</button>

    </div>
  </form>
</article>

{{> comment-partial blog.comments}}
{{> blog-info blog}}

<script src="/js/editBlog.js"></script>
<script src="/js/deleteBlog.js"></script>
<script src="/js/comments.js"></script> 